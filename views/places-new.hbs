<div class="container">

  <div class="row justify-content-center">

    <div class="col-md-6">

      <h1>Nuevo lugar</h1>

      <hr>

      <form action="/lugares/nuevo-lugar" method="POST">

        <div class="form-group">
          <label for="name">Nombre</label>
          <input name="name" type="text" class="form-control" id="name">
        </div>


          <div class="form-group">
            <label for="tipo-list">Elige entre un Tipo:</label>
            <select name="type" class="form-control" id="park-list">
              <option>Seleccionar</option>
              <option value="cafetería">cafeteria</option>
              <option value="librería">libreria</option>
            </select>
          </div>

        <div class="form-row">
          <div class="col">

            <div class="form-group">
              <label for="latitude">Latitud</label>
              <input name="latitude" type="text" class="form-control" id="latitude">
            </div>

          </div>
          <div class="col">

            <div class="form-group">
              <label for="longitude">Longitud</label>
              <input name="longitude" type="text" class="form-control" id="longitude">
            </div>
          </div>

          {{!-- <button type="submit" class="btn btn-dark">Crear nuevo libro</button> --}}
          <button type="submit" class="btn btn-dark btn-block">Crear lugar</button>
      </form>

    </div>
  </div>


</div>