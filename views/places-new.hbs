<div class="container">

  <div class="row justify-content-center">

    <div class="col-md-6">

      <br>

      <h1>Nuevo lugar</h1>

      <hr>

      <form action="/lugares/nuevo-lugar" method="POST">

        <div class="form-group">
          <label for="name">Nombre</label>
          <input name="name" type="text" class="form-control" id="name">
        </div>

        <div class="form-group">
          <label for="tipo-list">Elige entre un Tipo:</label>
          <select name="type" class="form-control" id="park-list">
            <option>Seleccionar</option>
            <option value="cafetería">Cafeteria</option>
            <option value="librería">Libreria</option>
          </select>
        </div>

        <button type="submit" class="btn btn-dark">Crear nuevo libro</button>
      </form>

    </div>
  </div>


</div>